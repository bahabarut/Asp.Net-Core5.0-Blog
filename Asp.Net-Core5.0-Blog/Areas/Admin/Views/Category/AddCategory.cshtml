@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/AdminLayout.cshtml";

}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Yeni Kategori</h5>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <div class="col-md-12">
                        <form role="form" method="post">
                            <div class="form-group">
                                <label for="CategoryName">Kategori Adı</label>
                                <input type="text" id="CategoryName" name="CategoryName" class="form-control mb-0">
                                <span class="text-danger" asp-validation-for="CategoryName"></span>
                            </div>
                            <div class="form-group">
                                <label for="CategoryDescription">Kategori Açıklaması</label>
                                <textarea id="CategoryDescription" class="form-control mb-0" rows="3" name="CategoryDescription"></textarea>
                                <span class="text-danger" asp-validation-for="CategoryDescription"></span>
                            </div>
                            <button class="btn btn-sm btn-primary m-t-n-xs" type="submit"><strong>Kaydet</strong></button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
