@model List<RoleAssingViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Kullanıcı Rolleri</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a>Admin</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Kullanıcı Rolleri</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-content">
                    <form method="post" action="/Admin/AdminRole/AssignRole">
                        <div class="row">
                            @for(int i =0; i < Model.Count; i++)
                            {
                                <div class="col-3">
                                    <div class="checkbox m-r-xs">
                                        <input type="hidden" asp-for="@Model[i].RoleID">
                                        <input type="hidden" asp-for="@Model[i].Name">
                                        <input type="checkbox" id="chkRole+@Model[i].Name" asp-for="@Model[i].Exists">
                                        <label class="form-check-label" for="chkRole+@Model[i].Name">@Model[i].Name</label>
                                    </div>
                                </div>
                            }
@*                             @foreach (var item in Model)
                            {
                                <div class="col-3">
                                    <div class="checkbox m-r-xs">
                                        <input type="hidden" asp-for="@item.RoleID">
                                        <input type="hidden" asp-for="@item.Name">
                                        <input class="form-check-input" type="checkbox"  asp-for="@item.Exists">
                                        <label class="form-check-label" for="@item.Exists">@item.Name</label>
                                    </div>
                                </div>
                            } *@
                        </div>
                        <div class="d-flex">
                            <button type="submit" class="btn btn-outline btn-primary btn-sm">Değişiklikleri Kaydet</button>
                            <a href="/Admin/AdminRole/UserRoleList" class="btn btn-outline btn-secondary btn-sm ml-2">Kullanıcı Listesine Dön</a>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

