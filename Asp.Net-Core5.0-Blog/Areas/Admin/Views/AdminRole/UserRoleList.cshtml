@model List<EntityLayer.Concrete.AppUser>
@{
    ViewData["Title"] = "UserRoleList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Kullanıcı Rol Listesi</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a>Admin</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Kullanıcı Rol Listesi</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    @* <h5>Kategoriler</h5> *@
                    @* <a href="/Admin/Category/AddCategory" class="btn btn-info btn-bitbucket ml-2"><i class="fa fa-plus mr-2"></i>Yeni Kategori</a> *@
                </div>
                <div class="ibox-content">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Kullanıcı</th>
                                <th>Rol Ata</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th>@item.NameSurname</th>
                                    <td><a href="/Admin/AdminRole/AssignRole/@item.Id" class="btn btn-outline btn-primary btn-sm">Rol Ata</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />

                    <a href="/Admin/AdminRole/Index" class="btn btn-outline btn-primary btn-sm">Rol Listesine Dön</a>
                </div>
            </div>
        </div>
    </div>
</div>