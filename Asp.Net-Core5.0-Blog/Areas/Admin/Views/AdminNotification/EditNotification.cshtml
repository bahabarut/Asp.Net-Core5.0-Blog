@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model EntityLayer.Concrete.Notification
@{
    ViewData["Title"] = "EditNotification";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Bildirim Düzenle</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a>Admin</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Bildirim Düzenle</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-12">
                            <form role="form" method="post">
                                <div class="form-group">
                                    <input type="hidden" asp-for="NotificationID" name="NotificationID" class="form-control mb-0">
                                    <input type="hidden" asp-for="NotificationTypeSymbol" name="NotificationTypeSymbol" class="form-control mb-0">
                                    <input type="hidden" asp-for="NotificationDate" name="NotificationDate" class="form-control mb-0">
                                    <input type="hidden" asp-for="NotificationStatus" name="NotificationStatus" class="form-control mb-0">
                                    <label for="NotificationType">Bildirim Tipi</label>
                                    <input type="text" id="NotificationType" asp-for="NotificationType" name="NotificationType" class="form-control mb-0">
                                </div>
                                <div class="form-group">
                                    <label for="NotificationDetails">Bildirim Detayı</label>
                                    <textarea id="NotificationDetails" asp-for="NotificationDetails" class="form-control mb-0" rows="4" name="NotificationDetails"></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="NotificationColor">Bildirim Rengi</label>
                                    <select class="form-control m-b" asp-for="NotificationColor" name="NotificationColor">
                                        <option value="primary">Primary</option>
                                        <option value="success">Success</option>
                                        <option value="info">Info</option>
                                        <option value="warning">Warning</option>
                                        <option value="danger">Danger</option>
                                    </select>
                                </div>
                                <button class="btn btn-sm btn-primary m-t-n-xs" type="submit"><strong>Kaydet</strong></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

