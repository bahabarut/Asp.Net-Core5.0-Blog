@using EntityLayer.Concrete
@model Message2
@{
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}


<div class="page-header">
    <h3 class="page-title"> Mesaj Düzenle </h3>
</div>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="form-wrapper" method="post" action="/Message/MessageEdit">
                    <input type="hidden" name="MessageID" asp-for="MessageID" />
                    <input type="hidden" name="MessageDate" asp-for="MessageDate" />
                    <input type="hidden" name="MessageStatus" asp-for="MessageStatus" />
                    <input type="hidden" name="SenderID" asp-for="SenderID" />
                    <div class="form-group">
                        <select class="form-control" asp-for="ReceiverID" id="exampleSelectGender">
                            <option>Alıcı</option>
                            @foreach (var item in ViewBag.Receivers as List<AppUser>)
                            {
                                <option value="@item.Id">@item.NameSurname</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="text" name="Subject" class="form-control mb-0" asp-for="Subject" placeholder="Konu">
                        <span class="text-danger" asp-validation-for="Subject"></span>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control mb-0" rows="3" name="MessageDetails" asp-for="MessageDetails" placeholder="Mesaj İçeriği"></textarea>
                        <span class="text-danger" asp-validation-for="MessageDetails"></span>
                    </div>

                    <button type="submit" class="btn btn-primary ">Kaydet<i class="fa fa-envelope-open-o"></i></button>
                </form>
            </div>
        </div>
    </div>
</div>