@model IEnumerable<EntityLayer.Concrete.Comment>

<h4>Yorumlar</h4>
<br />
<div class="custombox clearfix">
    <h4 class="small-title"> @Model.Count() Yorum</h4>
    <div class="row">
        <div class="col-lg-12">
            @foreach (var comment in Model)
            {
                <div class="comments-list">
                    <div class="media">
                        <a class="media-left" href="#">
                            <img src="~/coreblog/upload/author.jpg" alt="" class="rounded-circle">
                        </a>
                        <div class="media-body">
                            <h4 class="media-heading user_name">@comment.CommentUserName <small>@comment.CommentTitle 5 days ago</small></h4>
                            <p>@comment.CommentContent</p>
                            @* <a href="#" class="btn btn-primary btn-sm">Reply</a> *@
                        </div>
                    </div>



