@model List<EntityLayer.Concrete.Message2>
<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Mesajlar</h6>
    @foreach (var msg in Model)
    {
        <div class="dropdown-divider"></div>
        <a class="dropdown-item preview-item" href="/Message/MessageDetails/@msg.MessageID">
            <div class="preview-thumbnail">
                <img src="~/WriterImageFiles/@msg.SenderUser.ImageUrl" alt="image" class="profile-pic">
            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject ellipsis mb-1 font-weight-normal">@msg.SenderUser.NameSurname Size Mesaj Gönderdi</h6>
                <p class="text-gray mb-0">@msg.MessageDate.ToShortDateString()</p>
            </div>
        </a>
    }
    <div class="dropdown-divider"></div>
    @if (Model.Count() >= 1)
    {
        <h6 class="p-3 mb-0 text-center">@Model.Count() Mesaj var</h6>
    }
</div>