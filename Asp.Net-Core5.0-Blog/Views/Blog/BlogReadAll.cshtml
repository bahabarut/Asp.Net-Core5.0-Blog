@model IEnumerable<EntityLayer.Concrete.Blog >
@{
    ViewData["Title"] = "BlogDetails";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<section class="section lb m3rem">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                <div class="page-wrapper">

                    @foreach (var blog in Model)
                    {
                        <div class="blog-title-area">
                            <ol class="breadcrumb hidden-xs-down">
                                <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                                <li class="breadcrumb-item"><a href="#">Bloglar</a></li>
                                <li class="breadcrumb-item active">@blog.BlogTitle</li>
                            </ol>

                            <span class="color-yellow"><a href="marketing-category.html" title="">@blog.Category.CategoryName</a></span>

                            <h3>@blog.BlogTitle</h3>

                            <div class="blog-meta big-meta">
                                <small><a href="marketing-single.html" title="">@(((DateTime)@blog.BLogCreateDate).ToString("dd-MMM-yyyy"))</a></small>
                                <small><a href="blog-author.html" title="">by Jessica</a></small>
                                <small><a href="#" title=""><i class="fa fa-eye"></i> 2344</a></small>
                            </div><!-- end meta -->
                        </div>

                        <!-- end title -->

                        <div class="single-post-media">
                            <img src="~/BlogImageFiles/@blog.BLogImage" alt="" class="img-fluid">
                        </div>

                        <!-- end media -->

                        <div class="blog-content">
                            <div class="pp">
                                <p>@blog.BlogContent</p>

                            </div><!-- end pp -->
                        </div>

                        <!-- end content -->



                        <hr class="invis1">

                        @await Component.InvokeAsync("CommentListByBlog", new {id = ViewBag.blogId })
                        @* @await Html.PartialAsync("~/Views/Comment/CommentListByBlog.cshtml") *@

                        <hr class="invis1">
                        @await Html.PartialAsync("~/Views/Comment/PartialAddComment.cshtml")
                    }

                </div><!-- end page-wrapper -->
            </div><!-- end col -->

            <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
                <div class="sidebar">
                    @await Html.PartialAsync("~/Views/NewsLetter/SubscribeMail.cshtml")


                    @await Component.InvokeAsync("WriterLastBlog")
                    @await Component.InvokeAsync("CategoryList")

                </div>
                <!-- end sidebar
                </div><!-- end col -->


            </div><!-- end row -->
        </div><!-- end container -->
</section>