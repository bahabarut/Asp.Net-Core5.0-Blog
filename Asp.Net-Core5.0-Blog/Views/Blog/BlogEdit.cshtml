@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "BlogEdit";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="page-header">
    <h3 class="page-title"> Blog Düzenle </h3>
</div>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="form-wrapper" method="post">
                    <input type="hidden" name="BlogID" asp-for="BlogID" />
                    <input type="hidden" name="BlogStatus" asp-for="BlogStatus" />
                    <input type="hidden" name="BLogCreateDate" asp-for="BLogCreateDate" />
                    <input type="hidden" name="WriterID" asp-for="WriterID" />
                    <div class="form-group">
                        <input type="text" name="BlogTitle" asp-for="BlogTitle" class="form-control mb-0" placeholder="Blog Başlığı">
                        <span class="text-danger" asp-validation-for="BlogTitle"></span>
                    </div>
                    <div class="form-group">
                        <input type="text" name="BLogImage" asp-for="BLogImage" class="form-control mb-0" placeholder="Blog Görseli">
                        <span class="text-danger" asp-validation-for="BLogImage"></span>
                    </div>
                    <div class="form-group">
                        <input type="text" name="BLogThumbnailImage" asp-for="BLogThumbnailImage" class="form-control mb-0" placeholder="Blog Küçük Görsel">
                        <span class="text-danger" asp-validation-for="BLogThumbnailImage"></span>
                    </div>
                    <div class="form-group">
                        <select asp-items="ViewBag.catVal" asp-for="CategoryID" class="form-control mb-0" name="CategoryID">
                            <option>Kategori Seçiniz</option>
                        </select>
                        <span class="text-danger" asp-validation-for="CategoryID"></span>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control mb-0" asp-for="BlogContent" rows="3" name="BlogContent" placeholder="Blog İçeriği"></textarea>
                        <span class="text-danger" asp-validation-for="BlogContent"></span>
                    </div>

                    <button type="submit" class="btn btn-primary ">Kaydet<i class="fa fa-envelope-open-o"></i></button>
                </form>
            </div>
        </div>
    </div>
</div>
