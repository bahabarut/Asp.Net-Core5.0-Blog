@model BlogAddViewModel
@{
    ViewData["Title"] = "BlogAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="page-header">
    <h3 class="page-title"> Yeni Blog Girişi </h3>
</div>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="form-wrapper" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" asp-for="title" class="form-control mb-0" placeholder="Blog Başlığı">
                        <span class="text-danger" asp-validation-for="title"></span>
                    </div>
                    <div class="form-group">
                        <input type="file" asp-for="imageFile" class="form-control mb-0" placeholder="Blog Görseli">
                        <span class="text-danger" asp-validation-for="imageFile"></span>
                    </div>
                    <div class="form-group">
                        <select asp-items="ViewBag.catVal" class="form-control mb-0" asp-for="catId">
                            <option>Kategori Seçiniz</option>
                        </select>
                        <span class="text-danger" asp-validation-for="catId"></span>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control mb-0" rows="6" asp-for="content" placeholder="Blog İçeriği"></textarea>
                        <span class="text-danger" asp-validation-for="content"></span>
                    </div>

                    <button type="submit" class="btn btn-primary ">Kaydet <i class="fa fa-envelope-open-o"></i></button>
                </form>
            </div>
        </div>
    </div>
</div>