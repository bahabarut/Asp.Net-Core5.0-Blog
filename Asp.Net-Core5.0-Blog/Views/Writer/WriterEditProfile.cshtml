@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="page-header">
    <h3 class="page-title"> Yazar Profil Bilgileri Güncelleme </h3>
</div>

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form class="forms-sample" method="post">
                <input type="hidden" asp-for="WriterID" name="WriterID" />
                <input type="hidden" asp-for="WriterImage" name="WriterImage" />
                <div class="form-group">
                    <input type="text" class="form-control" name="WriterName" asp-for="WriterName" placeholder="Yazar Ad Soyad">
                    <span class="text-danger" asp-validation-for="WriterName"></span>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="WriterMail" asp-for="WriterMail" placeholder="Mail Adresi">
                    <span class="text-danger" asp-validation-for="WriterMail"></span>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="WriterPassword" asp-for="WriterPassword" placeholder="Şifre">
                    <span class="text-danger" asp-validation-for="WriterPassword"></span>
                </div>
                <div class="form-group">
                    <input type="file" name="img[]" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="Yazar Görsel">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-gradient-primary" type="button">Resim Seç</button>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <textarea class="form-control mb-0" asp-for="WriterAbout" rows="5" name="WriterAbout" placeholder="Yazar Hakkında"></textarea>
                    <span class="text-danger" asp-validation-for="WriterAbout"></span>
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                <button class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>
