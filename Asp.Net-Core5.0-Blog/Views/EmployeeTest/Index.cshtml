<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    @* <h5>Kategoriler</h5> *@
                    <a href="/EmployeeTest/AddEmployee" class="btn btn-info btn-bitbucket ml-2"><i class="fa fa-plus mr-2"></i>Yeni Çalışan</a>
                </div>
                <div class="ibox-content">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Düzenle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.Name</td>
                                    <td><a href="/EmployeeTest/EditEmployee/@item.ID" class="btn btn-outline btn-warning btn-sm">Düzenle</a></td>
                                    <td><a href="/EmployeeTest/DeleteEmployee/@item.ID" onclick="return confirm('Silmek İstediğinize Emin Misiniz?')" class="btn btn-outline btn-danger btn-sm">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    @* @Html.PagedListPager((IPagedList)Model, page=>Url.Action("Index",new {page})) *@
                </div>
            </div>
        </div>
    </div>
</div>
