@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<div class="page-title db">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <h2>İletişim<small class="hidden-xs-down hidden-sm-down">Bize Ulaşın</small></h2>
            </div><!-- end col -->
            <div class="col-lg-4 col-md-4 col-sm-12 hidden-xs-down hidden-sm-down">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                    <li class="breadcrumb-item active">İletişim</li>
                </ol>
            </div><!-- end col -->
        </div><!-- end row -->
    </div><!-- end container -->
</div><!-- end page-title -->

<section class="section lb">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="page-wrapper">
                    <div class="row">
                        <div class="col-lg-4">
                            <h4>Adres</h4>
                            <p>Ankara Türkiye</p>
                        </div>

                        <div class="col-lg-4">
                            <h4>Mail</h4>
                            <p>baha@mail.com</p>
                        </div><div class="col-lg-4">
                            <h4>Telefon</h4>
                            <p>0555 555 55 55</p>
                        </div>
                    </div><!-- end row -->

                    <hr class="invis">

                    <div class="row">
                        <div class="col-lg-12">
                            <form class="form-wrapper" method="post" action="/Contact/">
                                <h4>İletişim Formu</h4>
                                <div class="form-group">
                                    <input type="text" class="form-control mb-0" name="ContactUserName" placeholder="Adınız">
                                    <span class="text-danger" asp-validation-for="ContactUserName"></span>
                                </div><div class="form-group">
                                    <input type="text" class="form-control mb-0" name="ContactMail" placeholder="Mail Adresiniz">
                                    <span class="text-danger" asp-validation-for="ContactMail"></span>
                                </div><div class="form-group">
                                    <input type="text" class="form-control mb-0" name="ContactSubject" placeholder="Konu">
                                    <span class="text-danger" asp-validation-for="ContactSubject"></span>
                                </div>
                                <div class="form-group">
                                    <textarea class="form-control mb-0" name="ContactMessage" placeholder="Mesajınız"></textarea>
                                    <span class="text-danger" asp-validation-for="ContactMessage"></span>
                                </div>

                                <button type="submit" class="btn btn-primary">Gönder<i class="fa fa-envelope-open-o"></i></button>
                            </form>
                        </div>
                    </div>
                </div><!-- end page-wrapper -->
            </div><!-- end col -->
        </div><!-- end row -->
    </div><!-- end container -->
</section>
